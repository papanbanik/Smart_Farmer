<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="40dp"
            android:layout_marginTop="55dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:background="@drawable/card"
            android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/red_200">

                        <ImageView
                            android:layout_marginLeft="68dp"
                            android:id="@+id/imageView"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_2" />

                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Banana"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/descriptionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A banana is an elongated, edible fruit – botanically a berry – produced by several kinds of large herbaceous flowering plants in the genus Musa..."
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="italic"/>

                </LinearLayout>
        </androidx.cardview.widget.CardView>
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="370dp"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/clickable1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="30dp"
                    android:text="1  >"
                    android:textColor="@color/red_200"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/clickable2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="2  >"
                    android:textColor="@color/red_200"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/clickable3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/red_200"
                    android:textSize="30dp" />
        </LinearLayout>

</LinearLayout>
